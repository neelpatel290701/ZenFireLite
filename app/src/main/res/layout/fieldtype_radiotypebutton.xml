<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Any One"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_margin="3dp"
            android:text="Yes"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/radiotypebutton_optionselector"
            android:fontFamily="@font/roboto"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="No"
            android:layout_margin="3dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/radiotypebutton_optionselector"
            android:fontFamily="@font/roboto"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/NA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="N/A"
            android:layout_margin="3dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/radiotypebutton_optionselector"
            android:fontFamily="@font/roboto"
            android:layout_weight="1"/>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/reasons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reasons(s) :"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            />

        <EditText
            android:id="@+id/reasonDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:padding="5dp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:fontFamily="@font/roboto"
            android:hint="Custom Reason"
            android:textColorHint="@android:color/darker_gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:background="@drawable/inspectionstatus"/>

    </LinearLayout>

</LinearLayout>