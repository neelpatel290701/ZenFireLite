<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.AddForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Form Templates"
            android:fontFamily="@font/roboto_bold"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:textColor="#808080"
            />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/formTemplatesRecycleView"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                tools:listitem="@layout/formtemplates_items_cardview"/>
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PreviousForms"
            android:fontFamily="@font/roboto_bold"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:textColor="#808080"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/formTemplatesRecycleView2"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            tools:listitem="@layout/formtemplates_items_cardview"/>

    </LinearLayout>

    </LinearLayout>


</ScrollView>