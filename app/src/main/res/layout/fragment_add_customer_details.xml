<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".fragments.AddCustomerDetails">

        <!-- Basic Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Basic Details:"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/inspectionstatus"
                    android:overlapAnchor="false"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2">
                    <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@android:color/darker_gray"
                    app:cursorColor="@color/black"
                    app:expandedHintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="Company Name*">

                    <EditText
                        android:id="@+id/companyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="10"
                        android:inputType="text"
                        android:backgroundTint="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto"
                        android:hint="Company Name*"
                        android:ellipsize="end"
                        android:textColorHint="@color/black"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:hintTextColor="@android:color/darker_gray"
                    app:cursorColor="@color/black"
                    app:expandedHintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="First Name*">

                    <EditText
                        android:id="@+id/firstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="10"
                        android:inputType="text"
                        android:backgroundTint="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto"
                        android:hint="First Name*"
                        android:ellipsize="end"
                        android:textColorHint="@color/black"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:hintTextColor="@android:color/darker_gray"
                    app:cursorColor="@color/black"
                    app:expandedHintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="Last Name">

                    <EditText
                        android:id="@+id/lastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="10"
                        android:inputType="text"
                        android:backgroundTint="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto"
                        android:hint="Last Name"
                        android:ellipsize="end"
                        android:textColorHint="@color/black"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:hintTextColor="@android:color/darker_gray"
                    app:cursorColor="@color/black"
                    app:expandedHintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="Additional Name">

                    <EditText
                        android:id="@+id/additionalName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="10"
                        android:inputType="text"
                        android:backgroundTint="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto"
                        android:hint="Additional Name"
                        android:ellipsize="end"
                        android:textColorHint="@color/black"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Address Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address Details:"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">
                <EditText
                    android:id="@+id/searchCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/searchbar"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="Search "
                    android:inputType="text"
                    android:drawableStart="@drawable/magnifyingglass"
                    android:drawablePadding="10dp"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:hintTextColor="@android:color/darker_gray"
                    app:cursorColor="@color/black"
                    app:expandedHintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="Line1*">

                    <EditText
                        android:id="@+id/addressLine1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="10"
                        android:backgroundTint="@color/black"
                        android:textSize="12sp"
                        android:inputType="text"
                        android:fontFamily="@font/roboto"
                        android:hint="Line1*"
                        android:ellipsize="end"
                        android:textColorHint="@color/black"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:hintTextColor="@android:color/darker_gray"
                    app:cursorColor="@color/black"
                    app:expandedHintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="Line2">

                    <EditText
                        android:id="@+id/addressLine2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="10"
                        android:inputType="text"
                        android:backgroundTint="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto"
                        android:hint="Line2"
                        android:ellipsize="end"
                        android:textColorHint="@color/black"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:hintTextColor="@android:color/darker_gray"
                    app:cursorColor="@color/black"
                    app:expandedHintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="City*">

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="10"
                        android:inputType="text"
                        android:backgroundTint="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto"
                        android:hint="City*"
                        android:ellipsize="end"
                        android:textColorHint="@color/black"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:hintTextColor="@android:color/darker_gray"
                    app:cursorColor="@color/black"
                    app:expandedHintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="State*">

                    <EditText
                        android:id="@+id/state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="10"
                        android:inputType="text"
                        android:backgroundTint="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto"
                        android:hint="State*"
                        android:ellipsize="end"
                        android:textColorHint="@color/black"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:hintTextColor="@android:color/darker_gray"
                    app:cursorColor="@color/black"
                    app:expandedHintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="ZipCode*">

                    <EditText
                        android:id="@+id/zipCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="10"
                        android:backgroundTint="@color/black"
                        android:textSize="12sp"
                        android:inputType="text"
                        android:fontFamily="@font/roboto"
                        android:hint="ZipCode*"
                        android:ellipsize="end"
                        android:textColorHint="@color/black"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:hintTextColor="@android:color/darker_gray"
                    app:cursorColor="@color/black"
                    app:expandedHintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="Country*">

                    <EditText
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="10"
                        android:inputType="text"
                        android:backgroundTint="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto"
                        android:hint="Country*"
                        android:ellipsize="end"
                        android:textColorHint="@color/black"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Contact Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Details:"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:hintTextColor="@android:color/darker_gray"
                    app:cursorColor="@color/black"
                    app:expandedHintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="Email*">

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:backgroundTint="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto"
                        android:hint="Email*"
                        android:ellipsize="end"
                        android:textColorHint="@color/black"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:hintTextColor="@android:color/darker_gray"
                    app:cursorColor="@color/black"
                    app:expandedHintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="Landline">

                    <EditText
                        android:id="@+id/landLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="10"
                        android:inputType="number"
                        android:backgroundTint="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto"
                        android:hint="Landline"
                        android:ellipsize="end"
                        android:textColorHint="@color/black"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:hintTextColor="@android:color/darker_gray"
                    app:cursorColor="@color/black"
                    app:expandedHintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="Extension">

                    <EditText
                        android:id="@+id/extension"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="10"
                        android:inputType="number"
                        android:backgroundTint="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto"
                        android:hint="Extension"
                        android:ellipsize="end"
                        android:textColorHint="@color/black"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:hintTextColor="@android:color/darker_gray"
                    app:cursorColor="@color/black"
                    app:expandedHintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="Cell Phone">

                    <EditText
                        android:id="@+id/cellPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="10"
                        android:inputType="number"
                        android:backgroundTint="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto"
                        android:hint="Cell Phone"
                        android:ellipsize="end"
                        android:textColorHint="@color/black"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Additional Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional Details:"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <EditText
                    android:id="@+id/customerAdditionalDetails"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:gravity="top"
                    android:textSize="13dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:background="@drawable/changedate"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</ScrollView>
