<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="13dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/insFormName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Inspection of IND Fire Suppression System"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingBottom="4dp">
            <TextView
                android:id="@+id/formInspectorName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:text="Inspector Name:"
                android:layout_marginRight="5dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/formInspectorName_Value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:text="Fire Inspector"
                android:layout_marginRight="5dp"
                android:textColor="@color/black" />
           </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/formInspectionDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:text="Inspection Date:"
                android:layout_marginRight="5dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/formInspectionDate_Value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:text="07/05/2024"
                android:layout_marginRight="5dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/formInspectionTime_Value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:text="12:00AM"
                android:layout_marginRight="5dp"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>