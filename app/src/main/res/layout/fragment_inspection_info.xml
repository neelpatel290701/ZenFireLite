<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments.InspectionInfo">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginRight="8dp"
                    android:text="Customer Unique Id:" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="abc fire(201023)" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="8dp"
                    android:text="Customer Name:" />
                <TextView
                    android:id="@+id/customerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="Neel Patel" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="8dp"
                    android:text="Inspector Name:" />

                <TextView
                    android:id="@+id/fireInspector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Fire Inspector"
                    android:textColorHint="@color/black"
                    android:gravity="center_vertical"
                    android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
                    android:background="@android:drawable/editbox_background" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingTop="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="8dp"
                    android:text="Start Date/Time:" />
                <TextView
                    android:id="@+id/InsStartDateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_marginRight="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="06/05/2024" />
                <TextView
                    android:id="@+id/InsStartTimeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="12:00AM" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="8dp"
                    android:text="Address:" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="A/21 Radheshyam Township 98152 US" />
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingBottom="20dp">

                <EditText
                    android:id="@+id/location"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/navigatetolocation"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/roboto_bold"
                    android:hint="Navigate to Location"
                    android:inputType="text"
                    android:paddingStart="30dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/vector"
                    app:layout_constraintLeft_toLeftOf="@+id/location"
                    app:layout_constraintTop_toTopOf="@+id/location"
                    app:layout_constraintBottom_toBottomOf="@+id/location"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#F5F5F5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray"
                        android:weightSum="2"
                        android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/forms"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:background="@drawable/forms_deficiency"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:fontFamily="@font/roboto"
                        android:ems="10"
                        android:gravity="center"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Forms"
                        android:inputType="text"
                        android:textColorHint="@color/black"
                        android:textSize="12sp" />
                    <EditText
                        android:id="@+id/deficiency"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:background="@android:color/darker_gray"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:fontFamily="@font/roboto"
                        android:ems="10"
                        android:gravity="center"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Deficiency"
                        android:inputType="text"
                        android:textColorHint="@color/black"
                        android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="4">

                    <EditText
                        android:id="@+id/searchForm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/searchbar"
                        android:layout_marginRight="15dp"
                        android:ems="10"
                        android:fontFamily="@font/roboto"
                        android:hint="Search Form"
                        android:inputType="text"
                        android:drawableStart="@drawable/magnifyingglass"
                        android:drawablePadding="10dp"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="12dp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/addForm"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/navigatetolocation"
                        android:drawableStart="@drawable/baseline_add"
                        android:drawablePadding="3dp"
                        android:drawableTint="@color/white"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:fontFamily="@font/roboto_bold"
                        android:ems="10"
                        android:focusable="false"
                        android:paddingStart="5dp"
                        android:focusableInTouchMode="false"
                        android:hint="Add Form"
                        android:inputType="text"
                        android:textColorHint="@color/white"
                        android:textSize="12sp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F5F5">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/formsRecycleView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/inspectionform_cardview"
                    />

            </LinearLayout>

        </LinearLayout>
   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>